<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitGenius.FitnessGuruPage"
             Title="Fitness Guru">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="upper_body.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Aspect="AspectFit"/>
            <Button Text="Upper Body" 
                    BackgroundColor="ForestGreen"
                    TextColor="White" 
                    HorizontalOptions="FillAndExpand"
                    Margin="10"
                    Clicked="Button_Clicked"/>
            <Image Source="lower_body.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Aspect="AspectFit"/>
            <Button Text="Lower Body"
                    BackgroundColor="ForestGreen"
                    TextColor="White" 
                    HorizontalOptions="FillAndExpand"
                    Margin="10"
                    Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
