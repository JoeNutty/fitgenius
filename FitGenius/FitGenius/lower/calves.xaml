<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitGenius.lower.calves">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Calf Raises" FontSize="Title" FontAttributes="Bold" />
                <Image Source="calf_raise" Aspect="AspectFill" HeightRequest="250" />
                <Label Text="This exercise works the gastrocnemius and soleus muscles in the calves. Stand on the calf raise machine with your feet on the platform and adjust the height so that your heels are hanging off the edge. Push up with your toes to lift the weight and then slowly lower your heels back down to the starting position. Repeat for desired reps" />

                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
